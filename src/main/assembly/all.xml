<assembly>
  <id>all</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>hermesftp*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/test/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>hermesftp-ctx.xml</include>
        <include>hermesftp-users.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>etc/service</directory>
      <outputDirectory>service</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>service/conf</outputDirectory>
      <includes>
        <include>wrapper.conf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/shell</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>etc/plugins</directory>
      <outputDirectory>plugins</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
  	<dependencySet>
  		<outputDirectory>dependencies</outputDirectory>
  		<unpack>false</unpack>
  		<scope>runtime</scope>
  	</dependencySet>
  </dependencySets>
</assembly>
